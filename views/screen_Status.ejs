<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Duy Anh - R&D">

    <title>
        <%= __('RECTIFIER MONITORING SYSTEM') %>
    </title>

    <script src="socket.io/socket.io.js"></script>
    

    <!--______________KHỞI TẠO SOCKET.IO______________ -->
    <script>
        var socket = io("localhost:3000")
        socket.on('error', function (message) {
            alert(message);
        });
    </script>

    <!--______________KHAI BÁO CÁC SOURCE______________ -->
    <script src="https://kit.fontawesome.com/212982cf09.js" crossorigin="anonymous"></script>
    <script src="js/plotly-2.8.3.min.js"></script>
    <script src="js/jquery-3.7.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-Knob/1.2.13/jquery.knob.min.js"></script>
    <script src="js/FileSaver.js"></script>

    <!--______________ĐƯỜNG DẪN CÁC FILE FUNCTION JS______________ -->
    <script src="js/FC1_Common.js"></script>
    <script src="js/FC2_Alarm_Screen.js"></script>
    <script src="js/FC3_Data_Screen.js"></script>

    <!--______________ĐƯỜNG DẪN CSS______________ -->
    <link rel="stylesheet" href="CSS/root.css">
    <link rel="stylesheet" href="CSS/header.css">
    <link rel="stylesheet" href="CSS/screen_status.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!--______________ĐƯỜNG DẪN FAVICON______________ -->
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">

</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/moment@^2"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment@^1"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-zoom/1.1.1/chartjs-plugin-zoom.min.js"></script>

    <!-- Body -->
    <div id="Screen_Status">
    
        <!-- Phần Trên-->
        <div class="uplist_grid-container">
    
            <div id='stt_Show_MainPower_ON'>
                <%= __('MAIN POWER READY') %>
            </div>
    
            <div id='stt_Alarm_OverVoltage'>
                <%= __('OVERVOLTAGE WARNING') %>
            </div>
    
            <div id='stt_Safety_Door1'>
                <%= __('SAFETY DOOR 1 OPEN') %>
            </div>
    
            <div id='stt_E_STOP'>
                <%= __('E_STOP WARNING') %>
                    </p>
            </div>
    
            <div id='stt_Show_System_ReadyOK'>
                <%= __('RECTIFIER READY') %>
            </div>
    
            <div id='stt_Alarm_OverCurrent'>
                <%= __('OVERCURRENT WARNING') %>
            </div>
    
            <div id='stt_Safety_Door2'>
                <%= __('SAFETY DOOR 2 OPEN') %>
            </div>
    
            <div id='stt_E_STOP_External'>
                <%= __('EXTERNAL E_STOP') %>
                    </p>
            </div>
    
            <div id='stt_Lamp_General_Fault'>
                <%= __('GENERAL FAULT') %>
            </div>
    
            <div id='stt_Alarm_LimitCurrent'>
                <%= __('LIMITING CURRENT WARNING') %>
            </div>
    
            <div id='stt_Alarm_Volt_Abnormal'>
                <%= __('ABNORMAL VOLTAGE') %>
            </div>
    
            <div id='stt_Alarm_CV_Fault'>
                <%= __('CV FAULT') %>
            </div>
        </div>
    
        <!-- Phần Dưới-->
        <div class="downlist_grid-container">
    
            <!-- Child 1-->
            <div class="downlist_grid-child">
                <div id='stt_The_first_disable' class="circle"></div>
                <div id='stt_The_first_time_countdown' class="box_countdown"></div>
                <p class="top_text_status">
                    <%= __('ENABLE PROCESS I') %>
                </p>
            </div>
    
            <!-- Child 2-->
            <div class="downlist_grid-child">
                <p class="top_text_status">
                    <%= __('ENABLE PROCESS II') %>
                </p>
                <div id='stt_The_second_disable' class="circle"></div>
                <div id='stt_The_second_time_countdown' class="box_countdown"></div>
            </div>
    
            <!--Child 3-->
            <div class="child_grid-container">
    
                <!-- 3 shape ngang -->
                <div class="chill_grid-row_I">
                    <div>
                        <%= __('DC VOLTAGE') %>
                            <div id='stt_Show_Voltage_AD' class="child_grid-shape"></div>
                    </div>
    
                    <div>
                        <%= __('DC CURRENT') %>
                            <div id='stt_Show_Current_AD' class="child_grid-shape"></div>
                    </div>
    
                    <div>
                        <%= __('GIVEN VOLTAGE') %>
                            <div id='stt_ShowGiven_Voltage' class="child_grid-shape"></div>
                    </div>
                </div>
    
                <!-- 2 cột, mỗi cột 2 row -->
                <div class="chill_grid-row_II">
    
                    <div id='stt_start'>
                        <%= __('START') %>
                    </div>
    
                    <div id='stt_stop'>
                        <%= __('STOP') %>
                    </div>
    
                    <div id='stt_Auto_Manuel'>
                        <%= __('AUTOMATIC MODE') %>
                    </div>
    
                    <div id='stt_E_STOP_HMI'>
                        <%= __('E_STOP OF HMI') %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Body -->

    <!-- Header -->
    <%- include ('header.ejs') %>
    
    <!--______________KHAI BÁO CÁC FILE SOCKET______________ -->
    <script src="/js/socket/status.js"></script>
    
</body>